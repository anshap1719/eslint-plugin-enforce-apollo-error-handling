{
    "name": "@anshulsanghi/eslint-plugin-enforce-apollo-error-handling",
    "version": "1.1.4",
    "description": "ESLint Plugin To Enforce Error Handling For Errors Returned From Apollo GraphQL Queries",
    "main": "dist/index.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/anshap1719/eslint-plugin-enforce-apollo-error-handling.git"
    },
    "author": "Anshul Sanghi",
    "license": "MIT",
    "scripts": {
        "build": "tsc",
        "test": "cspell \"**/*\" --no-progress && npm run build && npm run unit-test",
        "unit-test": "jest",
        "test-watch": "jest --watch --detectOpenHandles",
        "format": "prettier --write \"src/**/*.{ts,tsx,json}\"",
        "prepare": "husky install",
        "postinstall": "npm run build",
        "postversion": "git push --tags && git push"
    },
    "devDependencies": {
        "@babel/core": "^7.18.9",
        "@types/eslint-utils": "^3.0.1",
        "@types/jest": "^28.1.6",
        "babel-loader": "^8.2.5",
        "cspell": "^6.4.0",
        "husky": "^8.0.1",
        "jest": "^28.1.3",
        "ts-jest": "^28.0.7"
    },
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": true,
        "printWidth": 80,
        "singleQuote": true,
        "arrowParens": "avoid"
    },
    "dependencies": {
        "@babel/preset-typescript": "^7.18.6",
        "@typescript-eslint/parser": "^5.30.7",
        "@typescript-eslint/scope-manager": "^5.30.7",
        "@typescript-eslint/utils": "^5.30.7",
        "eslint-utils": "^3.0.0",
        "node-estree": "^3.1.0"
    },
    "peerDependencies": {
        "typescript": "^4.5.4"
    },
    "jest": {
        "coveragePathIgnorePatterns": [
            "src/tests/(.*)/(.*).ts"
        ],
        "testMatch": [
            "<rootDir>/src/tests/**/*.{spec,test}.ts"
        ],
        "preset": "ts-jest"
    }
}
